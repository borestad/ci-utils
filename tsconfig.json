{
  "extends": "@tsconfig/deno/tsconfig.json",
  "include": [
    "./**/*.ts",
    "./**/*.mjs"
  ],
  "exclude": [
    "./fixtures/**/*.*",
    "deno.json"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "outDir": "./dist",
    "module": "esnext",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "checkJs": true,
    "moduleResolution": "node",
    "strict": false
  }
}
